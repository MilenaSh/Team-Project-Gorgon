<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">{{name}}</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <img class="img-responsive" src="{{imageOne}}" alt="">
    </div>

    <div class="col-md-4">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
        <h3>Contact us:</h3>
        <ul style="list-style: none;">
            <li><span class="glyphicon glyphicon-earphone"></span> {{phone}}</li>
            <li><span class="glyphicon glyphicon-map-marker"></span> {{address}}</li>
            <li><span class="glyphicon glyphicon-envelope"></span> {{e-mail}}</li>
        </ul>
    </div>
</div>

</div>
<!-- /.row -->

