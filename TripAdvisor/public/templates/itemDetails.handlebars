{{!--Comments--}}
<div class="row">
    <div class="input-group">
        <input id="comment-input-field" type="text" class="form-control" placeholder="Add comment...">
        <span class="input-group-btn">
        <button id="add-comment-btn" class="btn btn-secondary" type="button">Add comment</button>
      </span>
    </div>
</div>

<div class="list-group">
    {{#each comments}}
    {{!--Add link to user profile later--}}
    <li class="list-group-item list-group-item-success">{{{author}}} - {{{text}}}</li>
</div>
{{/each}}